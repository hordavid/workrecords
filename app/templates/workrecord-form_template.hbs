<form class="form-horizontal" method="post" {{action "onSubmit" on="submit"}}>
    <fieldset>
        <legend>Bejegyzés szerkesztése</legend>
        <div class="form-group">
            <label for="project" class="col-lg-2 control-label">Projekt</label>
            <div  class="col-lg-4">
                <input type="text" class="form-control" name="project" placeholder="" value="{{model.Workrecord.project}}" required="required">    
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-lg-2 control-label">Dátum</label>
            <div  class="col-lg-4">
                <input type="date" class="form-control" name="date" placeholder="" value="{{model.Workrecord.date}}" required="required">    
            </div>
        </div>
        <div class="form-group">
            <label for="begin" class="col-lg-2 control-label">Munkaidő kezdete</label>
            <div  class="col-lg-2">
                <input type="time" class="form-control"  name="begin" placeholder="" value="{{model.Workrecord.begin}}" required="required">    
            </div>
        </div>
        <div class="form-group">
            <label for="end" class="col-lg-2 control-label">Munkaidő vége</label>
            <div  class="col-lg-2">
                <input type="time" class="form-control"  name="end" placeholder="" value="{{model.Workrecord.end}}" required="required">    
            </div>
        </div>
        <div class="form-group col-lg-8">
            <button type="submit" class="btn btn-success">Mentés</button>
            {{#link-to "workrecords"}}<button class="btn btn-default">Vissza</button>{{/link-to}}
        </div>
    </fieldset>
</form>
{{outlet}}