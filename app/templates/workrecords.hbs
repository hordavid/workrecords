<div class="input-group"><span class="input-group-addon">Szűrő</span>
    <!--<input id="filter" type="text" class="form-control" placeholder="" {{action "filter"}} />-->
    {{input type="text" id="filter_input" class="form-control" key-press="filter"}}
    
    <!--<div class="input-group-btn">
        <button class="btn btn-primary">Szűrés</button>
    </div>-->
</div>
<br>
<table class="table table-striped table-hover">
    <thead>
        <th>Projekt</th>
        <th>Alkalmazott</th>
        <th>Dátum</th>
        <th>Munkaidő kezdete</th>
        <th>Munkaidő vége</th>
        <th>Szünet</th>
        <th>Műveletek</th>
    </thead>
    <tbody class=filterable>
        {{#each model.Workrecords as |workrecord|}}
            <tr>
                <td>{{workrecord.project}}</td>
                <td>{{workrecord.owner}}</td>
                <td>{{workrecord.date}}</td>
                <td>{{workrecord.begin}}</td>
                <td>{{workrecord.end}}</td>
                <td>{{workrecord.absenceTime}} perc</td>
                <td>
                    <button {{action "deleteWorkrecord" workrecord.id}} class="btn btn-sm btn-danger" data-toggle="tooltip" data-placement="bottom" title="Törlés">
                        <!--<span class="glyphicon glyphicon-minus"></span>-->
                        D
                    </button>
                    
                    <button {{action "addBreak" workrecord.id}} class="btn btn-sm btn-success" data-toggle="tooltip" data-placement="bottom" title="Növel">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                    
                    <button {{action "removeBreak" workrecord.id}} class="btn btn-sm btn-warning" data-toggle="tooltip" data-placement="bottom" title="Csökkent">
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>
                    
                    {{#link-to "update-workrecord" workrecord}}
                    <button class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="bottom" title="Módosítás">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    {{/link-to}}
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<br>
{{#link-to "new-workrecord"}}
<button class="btn btn-info ">
    <strong><span class="glyphicon glyphicon-plus"></span></strong>
    &nbsp;&nbsp;
    Munkaidő felvétele
</button>
{{/link-to}}
{{outlet}}